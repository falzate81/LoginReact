{
    "extends": "eslint:recommended",
    "rules": {
        "no-console": "off",
        "curly": "error",
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "quotes": ["error", "single"],
        "linebreak-style": "off",
        "brace-style": ["error", "allman", { "allowSingleLine": true }],
        "complexity": ["warn", 10],
        "no-unused-vars": "off"
    },
    "env": {
        "es6": true,
        "node": true,
        "browser": true,
        "jest": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-native"
    ],
    "globals": {
        "fetch": true
    }
}
